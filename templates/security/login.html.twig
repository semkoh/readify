{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
<style>
    .login-page {
        background-color: #f4f4f4;
        min-height: 100vh;
        padding: 40px 0;
    }

    .login-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    }

    .login-title {
        font-size: 2rem;
        color:rgb(18, 18, 18);
        font-weight: bold;
    }

    .btn-readify-outline {
        color: rgb(15, 14, 14);
        border: 1px solid rgb(46, 45, 45);
        background-color: transparent;
        transition: 0.3s ease-in-out;
        padding: 10px 18px;
        font-weight: 500;
        font-size: 1rem;
    }

    .btn-readify-outline:hover {
        background-color: rgb(25, 25, 25);
        color: white;
        border-color: rgb(84, 83, 83);
    }

    .btn-readify-filled {
        background-color:rgb(24, 23, 23);
        color: white;
        border: none;
        font-weight: 500;
    }

    .btn-readify-filled:hover {
        background-color:rgb(15, 15, 15);
    }
</style>
{% endblock %}

{% block body %}
<div class="login-page d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0 text-center">
                <img src="{{ asset('images/logo1.png') }}" alt="Logo Readify" class="img-fluid mb-4" style="max-width: 300px;">
                <h2 class="login-title">Bienvenue sur Readify</h2>
                <p>Connectez-vous pour explorer vos livres préférés </p>
            </div>

            <div class="col-md-6">
                <div class="login-card">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <input type="email" name="email" value="{{ last_username }}" required autofocus class="form-control" placeholder="Adresse e-mail">
                        </div>
                        <div class="mb-3">
                            <input type="password" name="password" required class="form-control" placeholder="Mot de passe">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-readify-filled w-100 mt-2" type="submit">Se connecter</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="#" class="text-muted small">Mot de passe oublié ?</a>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="{{ path('app_register') }}" class="btn btn-readify-outline">Créer un nouveau compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
